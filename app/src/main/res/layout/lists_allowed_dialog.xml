<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_inner_padding">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/list_dialog_hostname"
        app:expandedHintEnabled="false"
        app:helperText="@string/list_dialog_wildcard"
        app:helperTextEnabled="true"
        app:hintAnimationEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/list_dialog_hostname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/list_dialog_hostname_hint"
            android:importantForAutofill="no"
            android:inputType="textVisiblePassword"
            android:scrollHorizontally="true"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>
</FrameLayout>